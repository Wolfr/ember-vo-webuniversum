<section class="wizard">
  {{wu-wizard-progressbar isNumeric=isNumeric steps=parsedSteps setStep=(action 'setStep')}}
  <div class="wizard__panes">
    {{yield (hash
      step=(component "wu-wizard-step"
      currentStep=(readonly currentStep)
      registerStep=(action 'registerStep')
      unregisterStep=(action 'unregisterStep')
      )
      next=(component "wu-wizard-next" nextStep=(action 'nextStep'))
      previous=(component "wu-wizard-previous" previousStep=(action 'previousStep'))
      hasNextStep=(readonly hasNextStep)
      hasPreviousStep=(readonly hasPreviousStep)
      )
    }}
  </div>
</section>
