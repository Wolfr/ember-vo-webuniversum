<div class="document-miniature__type">
  <span class="document-miniature__type__text">{{type}}</span>
</div>
<div class="document-miniature__content">
  {{#if onClick}}
    <a class="document-miniature__title" {{action onClick}}>{{label}}</a>
  {{else}}
    <p class="document-miniature__title">{{label}}</p>
  {{/if}}
  <div class="document-miniature__metadata">{{metadata}}</div>
</div>
{{yield}}