<div class="progress-bar {{if isNumeric "progress-bar--numeric"}}" role="progressbar">
  {{#each steps as |step|}}
    <div class="progress-bar__step {{if step.active 'progress-bar__step--active'}}">
      <a href="" class="progress-bar__bullet" data-toggle="popover" aria-label={{step.id}} data-content={{step.id}} data-placement="top" data-wizard-step {{action 'setStep' step.id}}></a>
    </div>
  {{/each}}
</div>
