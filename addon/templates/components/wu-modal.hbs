{{#ember-wormhole to=destinationId}}
  <div class="overlay" id="ember-webuniversum-overlay" onclick={{action 'clicked'}}>
    <div class="modal-dialog" tabindex="-1" role="document" aria-hidden="true">
      <div class="modal-dialog__header">
        <div class="grid">
          <div class="col--10-12">
            <h1 class="h3">{{title}}</h1>
          </div>
          <div class="col--2-12 u-align-right">
            <div class="anti-jitter">
              <a class="link--icon--close" href="#" {{action 'close'}}>
                <span class="u-visually-hidden">Venster sluiten</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      {{yield}}
    </div>
  </div> 
{{/ember-wormhole}}

