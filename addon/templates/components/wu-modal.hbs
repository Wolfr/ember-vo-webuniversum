{{#ember-wormhole to=destinationId}}
  <div class="modal-overlay" id="ember-webuniversum-overlay" onclick={{action 'clicked'}}>
    <div class="modal-dialog {{dialog-class}}" tabindex="-1" role="document" aria-hidden="true">
      <div class="modal-dialog__header">
        <div class="grid">
          <div class="col--10-12">
            <h1 class="h3">{{title}}</h1>
          </div>
          <div class="col--2-12 u-align-right" {{action 'close'}}>
            <div class="anti-jitter">
              <a class="link--icon--close" href="#">
                <span class="u-visually-hidden">Venster sluiten</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      {{yield (hash
          content=(component 'wu-modal-content')
          buttons=(component 'wu-modal-buttons')
          )}}
    </div>
  </div>
{{/ember-wormhole}}
