{{#wu-popover as |p|}}
  {{#p.toggle}}
    <button class="data-table__action__toggle data-table__action__toggle--arrow js-popover__toggle js-popover-bound" aria-expanded="{{open}}" aria-controls="popover-0">{{label}}</button>
  {{/p.toggle}}
  {{#p.content}}
    <ul>
      {{yield (hash
        item=(component 'wu-popover-button-list-item' close=p.close)
          )}}
    </ul>
  {{/p.content}}
{{/wu-popover}}
